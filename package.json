{
    "name": "nadundesilva-website",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV=development PUBLIC_URL=http://localhost:3000 next dev -p 3000",
        "build": "NODE_ENV=production next build",
        "build:analyze": "NODE_ENV=production ANALYZE=true next build",
        "start": "NODE_ENV=production next start",
        "lint": "npm run lint:ts && npm run lint:css",
        "lint:ts": "next lint",
        "lint:css": "stylelint *.css **/*.css",
        "format": "prettier --write .",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "prepare": "husky install"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@emotion/cache": "~11.11.0",
        "@emotion/react": "^11.11.4",
        "@emotion/styled": "^11.11.5",
        "@mui/icons-material": "^5.16.4",
        "@mui/lab": "^5.0.0-alpha.172",
        "@mui/material": "^5.16.4",
        "@mui/material-nextjs": "^5.16.4",
        "@sentry/nextjs": "^8.18.0",
        "glob": "^11.0.0",
        "next": "~14.2.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-imgix": "^9.8.1",
        "sharp": "^0.33.4"
    },
    "devDependencies": {
        "@cypress/code-coverage": "^3.12.42",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",

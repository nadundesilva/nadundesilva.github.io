{
    "name": "nadundesilva-website",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV='development' NEXT_PUBLIC_WEBSITE_URL='http://localhost:3000' next dev -p 3000",
        "build": "NODE_ENV=production next build",
        "build:analyze": "NODE_ENV=production ANALYZE=true next build",
        "start": "NODE_ENV=production next start",
        "lint": "npm run lint:ts && npm run lint:css",
        "lint:ts": "next lint",
        "lint:css": "stylelint *.css **/*.css",
        "format:check": "prettier . --check",
        "format": "npm run format:check -- --write",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "prepare": "husky"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@emotion/cache": "~11.14.0",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@imgix/js-core": "^3.8.0",
        "@mui/icons-material": "^7.3.2",
        "@mui/lab": "^7.0.0-beta.17",
        "@mui/material": "^7.3.2",
        "@mui/material-nextjs": "^7.3.2",
        "@sentry/nextjs": "^10.12.0",
        "glob": "^11.0.3",
        "next": "15.5.3",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "sharp": "^0.34.4"
    },
    "devDependencies": {
        "@cypress/code-coverage": "3.14.6",
        "@eslint/js": "9.36.0",
        "@istanbuljs/nyc-config-typescript": "1.0.2",
        "@mdx-js/loader": "3.1.1",
        "@mdx-js/react": "3.1.1",
        "@next/bundle-analyzer": "15.5.3",
        "@next/eslint-plugin-next": "15.5.3",
        "@next/mdx": "15.5.3",
        "@testing-library/cypress": "10.1.0",
        "@testing-library/react": "16.3.0",
        "@testing-library/user-event": "14.6.1",
        "@types/cypress__code-coverage": "3.10.2",
        "@types/ga-gtag": "1.2.0",
        "@types/mdx": "2.0.13",
        "@types/node": "24.5.2",
        "@types/react": "19.1.13",
        "@types/react-dom": "19.1.9",
        "cypress": "15.2.0",
        "eslint": "9.36.0",
        "eslint-config-next": "15.5.3",
        "eslint-config-prettier": "10.1.8",
        "eslint-config-react": "1.1.7",
        "eslint-plugin-prettier": "5.5.4",
        "husky": "9.1.7",
        "lint-staged": "16.1.6",
        "next-pwa": "5.6.0",
        "next-router-mock": "1.0.2",
        "nyc": "17.1.0",
        "prettier": "3.6.2",
        "rehype-pretty-code": "0.14.1",
        "schema-dts": "1.1.5",
        "stylelint": "16.24.0",
        "stylelint-config-standard": "39.0.0",
        "typescript": "5.9.2",
        "typescript-eslint": "8.44.0"
    },
    "lint-staged": {
        "*.{tsx,ts,js}": "eslint --no-cache --fix",
        "*.css": "stylelint --fix",
        "*.{tsx,ts,js,css,mdx}": "prettier --write"
    }
}

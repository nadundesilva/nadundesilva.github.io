{
    "name": "nadundesilva-website",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV='development' NEXT_PUBLIC_WEBSITE_URL='http://localhost:3000' next dev -p 3000",
        "build": "NODE_ENV=production next build",
        "build:analyze": "NODE_ENV=production ANALYZE=true next build",
        "start": "NODE_ENV=production next start",
        "lint": "npm run lint:ts && npm run lint:css",
        "lint:ts": "next lint",
        "lint:css": "stylelint *.css **/*.css",
        "format": "prettier --write .",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "prepare": "husky"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@emotion/cache": "~11.13.1",
        "@emotion/react": "^11.13.3",
        "@emotion/styled": "^11.13.0",
        "@mui/icons-material": "^6.1.1",
        "@mui/lab": "^6.0.0-beta.10",
        "@mui/material": "^6.1.1",
        "@mui/material-nextjs": "^6.1.1",
        "@sentry/nextjs": "^8.30.0",
        "glob": "^11.0.0",
        "next": "~14.2.13",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-imgix": "^9.8.2",
        "sharp": "^0.33.5"
    },
    "devDependencies": {
        "@cypress/code-coverage": "^3.13.1",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",

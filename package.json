{
    "name": "nadundesilva-website",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV='development' NEXT_PUBLIC_WEBSITE_URL='http://localhost:3000' next dev -p 3000",
        "build": "NODE_ENV=production next build",
        "build:analyze": "NODE_ENV=production ANALYZE=true next build",
        "start": "NODE_ENV=production next start",
        "lint": "npm run lint:ts && npm run lint:css",
        "lint:ts": "next lint",
        "lint:css": "stylelint *.css **/*.css",
        "format:check": "prettier . --check",
        "format": "npm run format:check -- --write",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "prepare": "husky"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@emotion/cache": "~11.14.0",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@imgix/js-core": "^3.8.0",
        "@mui/icons-material": "^6.4.8",
        "@mui/lab": "^6.0.0-beta.31",
        "@mui/material": "^6.4.8",
        "@mui/material-nextjs": "^6.4.3",
        "@sentry/nextjs": "^9.9.0",
        "glob": "^11.0.1",
        "next": "15.2.4",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "sharp": "^0.33.5"
    },
    "devDependencies": {
        "@cypress/code-coverage": "^3.13.12",
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@mdx-js/loader": "^3.1.0",
        "@mdx-js/react": "^3.1.0",
        "@next/bundle-analyzer": "15.2.4",
        "@next/mdx": "15.2.4",
        "@testing-library/cypress": "^10.0.3",
        "@testing-library/react": "^16.2.0",
        "@testing-library/user-event": "~14.6.1",
        "@types/cypress": "^1.1.6",
        "@types/cypress__code-coverage": "^3.10.2",
        "@types/mdx": "^2.0.13",
        "@types/node": "~22.13.13",
        "@types/react": "19.0.12",
        "@types/react-dom": "19.0.4",
        "cypress": "^14.2.0",
        "eslint": "~8.57.1",
        "eslint-config-next": "^15.2.4",
        "eslint-config-prettier": "^10.1.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "next-pwa": "^5.6.0",
        "next-router-mock": "^0.9.13",
        "nyc": "^17.1.0",
        "prettier": "3.5.3",
        "rehype-pretty-code": "^0.14.1",
        "schema-dts": "^1.1.5",
        "stylelint": "^16.16.0",
        "stylelint-config-standard": "^37.0.0",
        "typescript": "~5.8.2"
    },
    "lint-staged": {
        "*.{tsx,ts,js}": "eslint --no-cache --fix",
        "*.css": "stylelint --fix",
        "*.{tsx,ts,js,css,mdx}": "prettier --write"
    }
}
